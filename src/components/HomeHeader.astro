---
import Logo from "./Logo.astro";

export interface Props {
	title: string;
}

const { title, href } = Astro.props;
---

<header class="HomeHeader">
	<Logo href={"/"} />
	<h1 class="text-style">{title}</h1>
</header>

<style>
	.HomeHeader {
		width: 95%;
		margin: auto;

		display: flex;
		justify-content: space-between;
	}

	.text-style {
		margin-right: 10%;
	}
</style>
