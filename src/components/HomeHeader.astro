---
import Logo from "./Logo.astro";

export interface Props {
	title: string;
}

const { title, href } = Astro.props;
---

<header class="HomeHeader">
	<Logo href={"/"}/>
	<h1 class="text-style">{title}</h1>
</header>

<style>
	.HomeHeader {
		width: 100%;
		margin: auto;
		margin-top: 20px;
		margin-left: 20px;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: 1fr;
		grid-column-gap: 0px;
		grid-row-gap: 0px;

		/* display: flex;
		justify-content: space-between; */
	}

	.text-style {
		margin-right: 10%;
	}

	h1 {
		font-size: 60px;
		grid-area: 1 / 3 / 2 / 4; 
	}
</style>
