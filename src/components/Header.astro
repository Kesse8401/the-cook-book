---
import Logo from "./Logo.astro";

export interface Props {
	title: string;
}

const { title, href } = Astro.props;
---

<header class="header">
	<Logo href={"/"} />
	<h1 class="text-style">{title}</h1>
	<div>
		<a href={"/starters/"} title={title}></a>
		<a href={"/soups/"} title={title}></a>
		<a href={"/mains/"} title={title}></a>
		<a href={"/desserts/"} title={title}></a>
	</div>
</header>

<style>
	.header {
		width: 95%;
		margin: auto;
		text-align: center;
		margin-bottom: 150px;

		display: flex;
		justify-content: space-between;
	}

	a {
		margin: 10px;
		color: rgb(31, 31, 31);
	}

	a:link {
		text-decoration: none;
	}

	a:visited {
		text-decoration: none;
	}

	a:hover {
		text-decoration: none;
	}

	a:active {
		text-decoration: none;
	}

	h1 {
		color: rgb(31, 31, 31);
		text-align: center;
	}
</style>
