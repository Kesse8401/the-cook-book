---
import Logo from "./Logo.astro";

export interface Props {
	title: string;
}

const { title, href } = Astro.props;
---

<header class="header">
	<Logo href={"/"} />
	<p class="empty"></p>
	<h1 class="text-style">{title}</h1>
	<a class="starters" href={"/starters/"} title={title}>STARTERS</a>
	<a class="soups" href={"/soups/"} title={title}>SOUPS</a>
	<a class="mains" href={"/mains/"} title={title}>MAINS</a>
	<a class="desserts" href={"/desserts/"} title={title}>DESSERTS</a>
	<a class="salads" href={"/salads/"} title={title}>SALADS</a>
	<a class="tipsAndTricks" href={"/tipsAndTricks/"} title={title}
		>TIPS & TRICKS</a
	>
</header>

<style>
	.header {
		width: 95%;
		margin-top: 20px;
		margin-left: 20px;
		/* text-align: center; */
		margin-bottom: 150px;
		/* display: flex;
		justify-content: space-between; */
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		grid-template-rows: 180px 50px;
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}

	.empty {
		grid-area: 1 / 3 / 2 / 5; 
	}

	.starters {
		grid-area: 2 / 1 / 3 / 2;
	}
	.soups {
		grid-area: 2 / 2 / 3 / 3;
	}
	.mains {
		grid-area: 2 / 3 / 3 / 4;
	}
	.desserts {
		grid-area: 2 / 4 / 3 / 5;
	}
	.salads {
		grid-area: 2 / 5 / 3 / 6;
	}
	.tipsAndTricks {
		grid-area: 2 / 6 / 3 / 7;
	}

	a {
		margin: 10px;
		color: rgb(31, 31, 31);
		font-size: 20px;
		font-weight: 900;
		display: flex;
		align-items: center;
        justify-content: space-around; 
	}

	a:link {
		text-decoration: none;
	}

	a:visited {
		text-decoration: none;
	}

	a:hover {
		text-decoration: none;
	}

	a:active {
		text-decoration: none;
	}

	h1 {
		color: rgb(31, 31, 31);
		text-align: center;
		font-size: 40px;
		grid-area: 1 / 5 / 2 / 7;
	}
</style>
